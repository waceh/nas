# MySQL Database Configuration
# 강력한 비밀번호 사용 권장
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=nas_db
MYSQL_USER=nas_user
MYSQL_PASSWORD=nas_password
MYSQL_PORT=3306

# Spring Boot Backend Configuration
SPRINGBOOT_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Kotlin Backend Configuration
KOTLIN_PORT=8081

# Vue Frontend Configuration
VUE_PORT=3000
NODE_ENV=development

# API URLs
# nginx 프록시를 통해 상대 경로로 접근
# 실제 외부 접근은 http://YOUR_SERVER_IP:3000 으로 접근
VUE_APP_API_URL=/api
VUE_APP_KOTLIN_API_URL=/api/kotlin

# Server IP (참고용, 실제 사용 시 YOUR_SERVER_IP로 변경)
# 예: SERVER_IP=158.180.76.251
SERVER_IP=YOUR_SERVER_IP

